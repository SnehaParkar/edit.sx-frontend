  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='Group Photo Editing')
    link(href='/css/marketing.css', rel='stylesheet', type='text/css')
    link(href='/css/standardize.css', rel='stylesheet', type='text/css')
    link(href='/css/index-grid.css', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400', rel='stylesheet', type='text/css')
    script(src="https://www.youtube.com/iframe_api", type="text/javascript")

    title= title
    - if (process.env['ROOTS_ENV'] && process.env['ROOTS_ENV'].toUpperCase() == "PRODUCTION")
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
