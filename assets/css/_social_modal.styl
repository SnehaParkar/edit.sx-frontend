.social-modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: $grey
  z-index: $headerIndex + 1

  .link-box
    border: solid 2px $border
    outline: none
    resize:none
    font-size: 12px
    padding: 16px 0
    text-align: center
    width: 280px

  .headline
    text-align: center
    padding-top: 40px
    font-size: 40px
    font-weight: 100

  .social-share li
    margin: 50px 0
    text-align: center

  .mt-share-inline-square-bw-sm img
    margin-top: 9px
    width: 34px
    height: 34px

  .mt-share-inline-square-bw-sm.mt-twitter:hover
    background-color: rgb(0, 172, 238)

  .mt-share-inline-square-bw-sm.mt-facebook:hover
    background-color: rgb(59, 89, 152)

  .mt-share-inline-square-bw-sm.mt-google:hover
    background-color: rgb(221, 75, 57)

  .mt-share-inline-square-bw-sm
    display: inline-block
    width: 50px
    height: 50px
    border-radius: 2px
    margin-right: 4px
    text-align: center
    background-color: rgb(51, 51, 51)
    transition: background-color 300ms ease-in
