.hidden-edit-list
  .edit-list
    left: -1 * $edit_list_width + 20
    cursor: pointer

    &:hover
      left: -1 * $edit_list_width + 30

    div
      opacity: 0
      pointer-events: none

.toggle-collapse
  text-align: right
  padding-right: 10px
  color: #A3A3A3
  margin-bottom: -17px
  cursor: pointer

  &:hover
    color: #636363

.edit-list
  width: $edit_list_width
  background: $grey
  position: fixed
  height: 100%
  padding: $headerHeight + $spacer 0
  top: 0
  left: 0
  overflow: auto
  border-right: solid 1px $border
  transition: left 250ms

  div
    transition: opacity 250ms

.revisions
  border-top: solid 1px $border
  li
    display: block
    padding: $spacer
    font-size: 13px
    color: $font_color
    transition background 200ms
    cursor: pointer

    &.odd
      background: rgba(0, 0, 0, 0.05)
    &:hover
      background: rgba($blue, 0.15)

    &.active
      color: #FFF
      background: $blue

      .remove
        color: #FFF

  .editor
    margin-left: $spacer * 0.5

  .remove
    color: #808080
    padding: 0 5px
    margin-right: -5px

.revision-header
  padding: 0 $spacer
  margin-bottom: $spacer

.title-label, .revision-title
  color: darken($dark, 30%)

.revision-title
  padding: $spacer $spacer 0
