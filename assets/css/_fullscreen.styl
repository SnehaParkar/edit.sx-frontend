@import "_comments"
@import "_progress"

.close
  width: 40px
  height: 40px
  border: solid 2px white
  border-radius: 50%
  color: white
  text-align: center
  font-weight: 700
  opacity: 0.3
  line-height: 37px
  cursor: pointer
  position: fixed
  z-index: $headerIndex
  top: $spacer
  right: $spacer
  transition opacity 200ms
  &:hover
    opacity: 1

  &.dark
    border-color: #000
    color: #000

.full-screen
  position: fixed
  top: 0
  left: 0
  height: 100%
  width: 100%
  z-index: $headerIndex + 2

  .image-view
    position: absolute
    width: 90%
    height: 85%
    background-repeat: no-repeat
    background-size: contain
    background-position: center
    background-color: #000
    left: 5%
    top: 3%
    z-index: 3

  .ratings
    top: 2.5%
    left: 0
    z-index: 1
    zoom: 1.3
    position: fixed
    width: 100%
    text-align: center

  .background-cover
    background: rgba(0,0,0,0.9)
    position: absolute
    width: 100%
    height: 100%
    left: 0
    top: 0
    z-index: 1

  .large-view
    z-index: 2
    position: absolute
    left: 5%
    top: 5%
    width: 90%
    height: 90%
    text-align: center

    .background-cover
      background: transparent
